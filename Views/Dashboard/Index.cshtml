@{
    ViewData["Title"] = "Dashboard | NTS";
    ViewData["PageHeading"] = "Dashboard";
    ViewData["PageSubtitle"] = "Overview of your business";
}

    <link rel="stylesheet" href="~/css/pages/dasboard.css" asp-append-version="true" />

<div class="content-section dashboard-page">
    <div class="section-header">
        <h2>Dashboard</h2>
        <p>Quick overview of your business performance.</p>
    </div>

    <div class="cards-grid dashboard-grid">
        <div class="stat-card">
            <div class="stat-label">Total Sales</div>
            <div class="stat-value">₹0</div>
            <div class="stat-meta">+0% vs last month</div>
        </div>
        <div class="stat-card">
            <div class="stat-label">Invoices</div>
            <div class="stat-value">0</div>
            <div class="stat-meta">No invoices created yet</div>
        </div>
    </div>
</div>
