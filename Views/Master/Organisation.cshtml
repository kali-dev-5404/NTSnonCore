@{
    ViewData["Title"] = "Organisation | Master | NTS";
    ViewData["PageHeading"] = "Organisation";
    ViewData["PageSubtitle"] = "Manage organisation details";
}

<link href="~/Content/pages/organisation.css" rel="stylesheet" />

<div class="content-section organisation-page">

    <div class="table-card">

        <!-- Toolbar -->
        <div class="table-toolbar">
            <div class="toolbar-left">
                <input type="text" id="orgSearch" class="form-control form-control-sm"
                       placeholder="Search organisation..." />
            </div>

            <div class="toolbar-right">
                <a href="@Url.Action("AddOrganisation","Master")" class="btn btn-primary btn-sm">
                    <i class="fa fa-plus"></i> Add Organisation
                </a>
            </div>
        </div>

        <!-- Table -->
        <div class="table-responsive">
            <table id="organisationTable" class="table table-hover nts-table">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Organisation Name</th>
                        <th>Mobile</th>
                        <th>City</th>
                        <th>Status</th>
                        <th class="text-end">Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>1</td>
                        <td>NTS Dairy</td>
                        <td>9876543210</td>
                        <td>Madurai</td>
                        <td><span class="badge bg-success">Active</span></td>
                        <td class="text-end">
                            <button class="btn btn-sm btn-outline-primary">Edit</button>
                        </td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>Joy Farms</td>
                        <td>9123456789</td>
                        <td>Chennai</td>
                        <td><span class="badge bg-secondary">Inactive</span></td>
                        <td class="text-end">
                            <button class="btn btn-sm btn-outline-primary">Edit</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

    </div>
</div>

@section Scripts {
    <script src="~/Scripts/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/datatables/dataTables.bootstrap5.min.js"></script>
    <script src="~/Scripts/pages/organisation.js"></script>
}
