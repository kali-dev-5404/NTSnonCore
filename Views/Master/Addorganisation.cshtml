@{
    ViewData["Title"] = "Add Organisation | Master | NTS";
ViewData["PageHeading"] = "Add Organisation";
ViewData["PageSubtitle"] = "Create a new organisation with basic details";
}

<link href="~/Content/pages/addorganisation.css" rel="stylesheet" />

<section class="org-form-wrapper">
    <form class="org-form-card" method="post">

        <div class="org-form-header">
            <h2>Organisation Details</h2>
            <p>Please fill all required information</p>
        </div>

        <div class="org-form-grid">

            <div class="org-field">
                <label for="OrgName">Organisation Name</label>
                <input type="text" id="OrgName" name="OrgName" placeholder="Enter organisation name" required />
            </div>

            <div class="org-field">
                <label for="ShortName">Short Name</label>
                <input type="text" id="ShortName" name="ShortName" placeholder="Eg: NTS" />
            </div>

            <div class="org-field">
                <label for="Email">Email</label>
                <input type="email" id="Email" name="Email" placeholder="example@mail.com" />
            </div>

            <div class="org-field">
                <label for="Phone">Phone</label>
                <input type="tel" id="Phone" name="Phone" placeholder="9876543210" />
            </div>

            <div class="org-field">
                <label for="GST">GST Number</label>
                <input type="text" id="GST" name="GST" placeholder="GSTIN" />
            </div>

            <div class="org-field">
                <label for="PAN">PAN Number</label>
                <input type="text" id="PAN" name="PAN" placeholder="PAN" />
            </div>

            <div class="org-field org-field-full">
                <label for="Address">Address</label>
                <textarea id="Address" name="Address" rows="3" placeholder="Full address"></textarea>
            </div>

        </div>

        <div class="org-form-actions">
            <button type="submit" class="btn-primary">Save Organisation</button>
            <a href="@Url.Action("Organisation", "Master")" class="btn-secondary">Cancel</a>
        </div>

    </form>
</section>
